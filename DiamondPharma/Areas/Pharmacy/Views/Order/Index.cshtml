@model IEnumerable<DiamondPharma.Models.Order>

@{
    ViewData["Title"] = "Your Orders";
}

<h1>Your Orders</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total Items</th>
            <th>Total Cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate.ToLocalTime()</td>
            <td>@order.Status</td>
            <td>@order.OrderItems.Sum(oi => oi.Quantity)</td>
            <td>@order.OrderItems.Sum(oi => oi.Price * oi.Quantity):C</td>
            <td><a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a></td>
        </tr>
    }
    </tbody>
</table>
