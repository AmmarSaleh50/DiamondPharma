@model DiamondPharma.Models.Pharmacy
@{
    ViewData["Title"] = "Pharmacy Dashboard";
}

<div class="container text-center">
    <h1 class="mt-4 mb-5" style="font-weight:700;letter-spacing:1px;">Welcome, @Model.Name!</h1>
    
    <div class="row mt-5 justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Your Pharmacy Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">License Number:</dt>
                        <dd class="col-sm-8">@Model.LicenseNumber</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        
                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        
                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                    <a href="/Pharmacy/Pharmacy/Profile" class="btn btn-warning btn-block">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
