@model IEnumerable<DiamondPharma.Models.CartViewModel>
@{
    ViewData["Title"] = "Your Cart";
}
<h1>Your Cart</h1>
@if (!Model.Any()) {
    <p>Your cart is empty.</p>
    <a asp-area="Pharmacy" asp-controller="Pharmacy" asp-action="Index" class="btn btn-primary">Order Medicines</a>
} else {
    <form asp-action="Checkout" method="post">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Medicine.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Medicine.Price:C</td>
                    <td>@(item.Medicine.Price * item.Quantity):C</td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-success">Checkout</button>
        <a asp-area="Pharmacy" asp-controller="Pharmacy" asp-action="Index" class="btn btn-secondary">Continue Ordering</a>
    </form>
}
