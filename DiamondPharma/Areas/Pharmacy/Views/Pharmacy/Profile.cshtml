@model DiamondPharma.Models.Pharmacy

@{
    ViewData["Title"] = "Edit Profile";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h3>Edit Pharmacy Profile</h3>
    </div>
    <div class="card-body">
        <form asp-action="Profile" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="LicenseNumber"></label>
                <input asp-for="LicenseNumber" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Status</label>
                <input class="form-control" value="@(Model.IsApproved ? "Approved" : "Pending")" readonly />
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
